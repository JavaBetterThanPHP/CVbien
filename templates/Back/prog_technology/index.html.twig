{% extends 'back_base.html.twig' %}

{% block title %}ProgTechnology index{% endblock %}

{% block content %}
    <h1>ProgTechnology index</h1>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>Related language</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for prog_technology in prog_technologies %}
            <tr>
                <td>{{ prog_technology.id }}</td>
                <td>{{ prog_technology.label }}</td>
                <td>{% if prog_technology.progLanguage.name  is defined %}{{ prog_technology.progLanguage.name }}{% endif %}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('back_prog_technology_show', {'id': prog_technology.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('back_prog_technology_edit', {'id': prog_technology.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('back_prog_technology_new') }}">Create new</a>
{% endblock %}
