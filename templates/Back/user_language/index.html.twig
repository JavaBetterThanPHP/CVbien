{% extends 'back_base.html.twig' %}

{% block title %}UserLanguage index{% endblock %}

{% block content %}
    <h1>UserLanguage index</h1>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Language</th>
            <th>User</th>
            <th>Level</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user_language in user_languages %}
            <tr>
                <td>{{ user_language.id }}</td>
                <td>{{ user_language.language.name }}</td>
                <td>{{ user_language.user.email }}</td>
                <td>{{ user_language.level }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('back_user_language_show', {'id': user_language.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('back_user_language_edit', {'id': user_language.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('back_user_language_new') }}">Create new</a>
{% endblock %}
