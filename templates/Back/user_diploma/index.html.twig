{% extends 'back_base.html.twig' %}

{% block title %}UserDiploma index{% endblock %}

{% block content %}
    <h1>UserDiploma index</h1>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Diploma</th>
            <th>DateOfGrant</th>
            <th>Mention</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user_diploma in user_diplomas %}
            <tr>
                <td>{{ user_diploma.id }}</td>
                <td>{{ user_diploma.user.email }}</td>
                <td>{{ user_diploma.diploma.title }}</td>
                <td>{{ user_diploma.dateOfGrant ? user_diploma.dateOfGrant|date('Y-m-d') : '' }}</td>
                <td>{{ user_diploma.mention }}</td>
                <td>
                    <a class="btn btn-primary"
                       href="{{ path('back_user_diploma_show', {'id': user_diploma.id}) }}">show</a>
                    <a class="btn btn-primary"
                       href="{{ path('back_user_diploma_edit', {'id': user_diploma.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
