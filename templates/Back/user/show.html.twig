{% extends 'back_base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Personnal space identifier</th>
            <td>{{ user.spaceName }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>IsActive</th>
            <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>IsSearchable</th>
            <td>{{ user.IsSearchable ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Birthdate</th>
            <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>PhoneNumber</th>
            <td>{{ user.phoneNumber }}</td>
        </tr>
        <tr>
            <th>ProPhoneNumber</th>
            <td>{{ user.proPhoneNumber }}</td>
        </tr>
        <tr>
            <th>Adress</th>
            <td>{{ user.adress }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ user.city }}</td>
        </tr>
        <tr>
            <th>CityCode</th>
            <td>{{ user.cityCode }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ user.country.name }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ user.status }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ user.type }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('back_user_index') }}">back to list</a>

    <a href="{{ path('back_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('Back/user/_delete_form.html.twig') }}
{% endblock %}
