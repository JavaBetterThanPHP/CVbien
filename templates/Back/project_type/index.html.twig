{% extends 'back_base.html.twig' %}

{% block title %}ProjectType index{% endblock %}

{% block content %}
    <h1>ProjectType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project_type in project_types %}
            <tr>
                <td>{{ project_type.id }}</td>
                <td>{{ project_type.label }}</td>
                <td>
                    <a href="{{ path('project_type_show', {'id': project_type.id}) }}">show</a>
                    <a href="{{ path('project_type_edit', {'id': project_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_type_new') }}">Create new</a>
{% endblock %}
