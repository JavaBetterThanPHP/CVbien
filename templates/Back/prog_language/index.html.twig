{% extends 'back_base.html.twig' %}

{% block title %}ProgLanguage index{% endblock %}

{% block content %}
    <h1>ProgLanguage index</h1>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for prog_language in prog_languages %}
            <tr>
                <td>{{ prog_language.id }}</td>
                <td>{{ prog_language.name }}</td>
                <td>{{ prog_language.type }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('back_prog_language_show', {'id': prog_language.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('back_prog_language_edit', {'id': prog_language.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('back_prog_language_new') }}">Create new</a>
{% endblock %}
