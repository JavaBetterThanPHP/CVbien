{% extends 'base.html.twig' %}

{% block title %}CV Bien{% endblock %}

{% block body %}
    {% block header %}
        <nav class="navbar navbar-light bg-dark justify-content-between">
            <a class="navbar-brand text-light">CVBien</a>
            {% if user is defined %}
                <input id="userId" name="userId" type="hidden" value="{{ user.id }}">
                <div class="dropdown">
                    <span style="cursor: pointer;" data-toggle="dropdown" class="fa fa-bars text-light fa-2x"></span>
                    <div class="dropdown-menu dropdown-menu-left">
                        <a class="dropdown-item" href="{{ path('front_user_edit') }}">Modifier mes informations</a>
                        <a class="dropdown-item" href="#">Link 2</a>
                        <a class="dropdown-item" href="#">Link 3</a>
                    </div>
                </div>
            {% else %}
                <div class="ml-3">
                    <a class="btn btn-primary" href="{{ path('app_security_login') }}">Sign in</a>
                    <a class="btn btn-outline-primary" href="{{ path('app_security_registration') }}">Sign up</a>
                </div>
            {% endif %}
        </nav>
        {% if user is defined %}
        <div class="container-fluid p-o">
            <div class="row">
                <div class="col-md-12">
                    <img src="https://www.mymaldives.com.au/wp-content/uploads/sites/11/2016/12/Beach-Banner.jpg" alt="placeholder 960" class="img-responsive" />
                </div>
            </div>
        </div>
        {% endif %}
    {% endblock %}

    <div class="container mt-5">
        {% block content %}
        {% endblock %}
    </div>

    {% block footer %}{% endblock %}
{% endblock %}