<div class="col-9">
    <h1>Mes expériences professionnelles <a href="" class="btn btn-success ml-5" data-toggle="modal"
                                            data-target="#userDiplomaModal">Ajouter</a></h1>
    <div class="row mt-5">

        {# CARD USER EXP #}
        {% for userSociety in user.userSocieties %}
            <div class="col-sm-6 col-lg-4 py-2">
                <div class="card " style="max-width: 25rem;">
                    <div class="card-header">
                        {{ userSociety.jobType.label }}
                        <div class="float-right">
                            <form method="post"
                                  action="{{ path('front_user_experience_delele', {'id': userSociety.id}) }}"
                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token"
                                       value="{{ csrf_token('delete' ~ userSociety.id) }}">
                                <button class="btn btn-link float-right"><i class="far fa-trash-alt"></i></button>
                            </form>
                        </div>
                        <a href="#" class="btn btn-link float-right"><i class="fas fa-edit" data-toggle="modal"
                                                                        data-target="#editUserExpModal{{ userSociety.id }}"></i></a>
                        <br>
                    </div>

                    <div class="card-body">
                        <p class="card-text">
                            {% if userSociety %}
                                {% if userSociety.isActive %}
                                    <span class="badge badge-success float-right">En poste</span>
                                {% endif %}
                                <span class="font-weight-bold">Societé : </span>{{ userSociety.society.name }}<br/>
                                <span class="font-weight-bold">Localisation : </span>{{ userSociety.society.city }} - {{ userSociety.society.country.name }}
                                <br/>
                            {% endif %}
                        </p>
                        <p class="card-text">
                            {% if userSociety.isActive %}
                                Depuis {{ userSociety.firstDate | date("m/d/Y", "Europe/Paris") }}
                            {% else %}
                                En poste du {{ userSociety.firstDate | date("m/d/Y", "Europe/Paris") }}
                                au {{ userSociety.lastDate | date("m/d/Y", "Europe/Paris") }}
                            {% endif %}
                        </p>
                    </div>

                </div>

                <div id="editUserExpModal{{ userSociety.id }}" class="modal fade bd-example-modal-lg" tabindex="-1"
                     role="dialog"
                     aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modifier l'expérience</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{ render(controller(
                                    'App\\Controller\\Front\\UserExperienceController::userExpEdit',
                                    { 'id': userSociety.id }
                                )) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        {% else %}
            <div class="col-sm-6 col-lg-4 py-2">
                <span class="ml-5 font-italic">Renseignez vos experiences professionnelles :)</span>
            </div>
        {% endfor %}
        {# - #}

    </div>
</div>