<div class="col-9">
    {% for message in app.flashes('error') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Holy guacamole !</strong> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <h1>Modifier mes informations professionnelles</h1>
    <h2>Technologies
        <a href="#" class="initAuto btn btn-default" type="button" data-toggle="modal" data-target="#userProgLanguageModal"><i class="fas fa-plus-circle fa-2x"></i></a>    </h2>
    <div class="container">
        <div class="row">
            {% for userProgLanguage in user.userProgLanguages %}
                <div class="col-sm-6 col-lg-4 py-2">
                    <div class="card bg-light card h-100" style="max-width: 25rem;">
                        <div class="card-header">
                            {{ userProgLanguage.progLanguage.name }}
                            <div class="float-right">
                                <form method="post" action="{{ path('front_user_progLanguageDelete', {'id': userProgLanguage.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userProgLanguage.id) }}">
                                    <button class="btn btn-link float-right"><i class="far fa-trash-alt"></i></button>
                                </form>
                            </div>
                            <a href="#" class="initAuto btn btn-link float-right"><i class="fas fa-edit" data-toggle="modal" data-target="#editUserProgLanguageModal{{ userProgLanguage.id }}"></i></a>
                        </div>
                        <div class="card-body">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="{{ userProgLanguage.level * 10}}" aria-valuemin="0" aria-valuemax="100" style="width: {{ userProgLanguage.level * 10}}%"></div>
                            </div>
                        </div>
                    </div>
                    <div id="editUserProgLanguageModal{{ userProgLanguage.id }}" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
                         aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Modifier la compétence</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    {{ render(controller('App\\Controller\\Front\\UserController::userProgLanguageEdit',{ 'id': userProgLanguage.id })) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <h2>Langues
        <a href="#" class="btn btn-default" type="button" data-toggle="modal" data-target="#userLanguageModal"><i class="fas fa-plus-circle fa-2x"></i></a>    </h2>
    </h2>
    <div class="container">
        <div class="row">
            {% for userLanguage in user.userLanguages %}
                <div class="col-sm-6 col-lg-4 py-2">
                    <div class="card bg-light card h-100" style="max-width: 25rem;">
                        <div class="card-header">
                            {{ userLanguage.language.name }}
                            <div class="float-right">
                                <form method="post" action="{{ path('front_user_languageDelete', {'id': userLanguage.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userLanguage.id) }}">
                                    <button class="btn btn-link float-right"><i class="far fa-trash-alt"></i></button>
                                </form>
                            </div>
                            <a href="#" class="btn btn-link float-right"><i class="fas fa-edit" data-toggle="modal" data-target="#editUserLanguageModal{{ userLanguage.id }}"></i></a>
                        </div>
                        <div class="card-body">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" aria-valuenow="{{ userLanguage.level * 10}}" aria-valuemin="0" aria-valuemax="100" style="width: {{ userLanguage.level * 10}}%"></div>
                            </div>
                        </div>
                    </div>
                    <div id="editUserLanguageModal{{ userLanguage.id }}" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
                         aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Modifier la compétence</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    {{ render(controller('App\\Controller\\Front\\UserController::userLanguageEdit',{ 'id': userLanguage.id })) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>