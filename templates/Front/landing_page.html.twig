{% extends 'base.html.twig' %}

{% block title %}CV Bien{% endblock %}

{% block body %}
    <link href="{{ asset('creative.css') }}" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic'
          rel='stylesheet' type='text/css'>
    <!-- Navigation -->
    <body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="#page-top">CVBIEN</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto my-2 my-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_security_login') }}">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_security_registration') }}">Inscription</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-white font-weight-bold">le cv en ligne, tout simplement.</h1>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-7 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">CVBien est un outil de création de portfolios en ligne, pensé spécialement pour les développeurs.</p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">en savoir plus</a>
                </div>
                <div class="col-lg-5 align-self-baseline">
                    <img class="img-fluid" src="https://assets-ouch.icons8.com/preview/844/64dd3597-9e4e-4d7d-95dd-fdac629936c7.png">
                </div>
            </div>
        </div>
    </header>

    <!-- About Section -->
    <section class="page-section bg-primary" id="about">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 text-center">
                    <img  class="img-fluid" src="https://assets-ouch.icons8.com/preview/311/8a90056a-e360-4be8-9303-b7b1faaaef31.png">
                </div>

                <div class="col-lg-7 text-center">
                    <h2 class="text-white mt-0">On a ce qu'il vous faut !</h2>
                    <hr class="divider light my-4">
                    <p class="text-white-50 mb-4">Pas le temps de coder votre propre site ? Lassé de Linkedin et Tumblr ? Notre site vous permet de créer rapidement votre propre espace personnel, entièrement customizable et intégrant des modules variés comme GitHub, StackOverflow, CodePen, JSFiddle, et bien d'autres !</p>
                    <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">C'est parti !</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="page-section" id="services">
        <div class="container">
            <h2 class="text-center mt-0">A votre service</h2>
            <hr class="divider my-4">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-gem text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Vie Privée</h3>
                        <p class="text-muted mb-0">Vos données personnelles sont respectées.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Up to Date</h3>
                        <p class="text-muted mb-0">Nous référençons les dernières technologies, et celles de demain.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-globe text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Prêt à Publier</h3>
                        <p class="text-muted mb-0">Votre site en ligne, en quelques clics.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-heart text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Made with Love</h3>
                        <p class="text-muted mb-0">Fait par des développeurs, pour les développeurs.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 text-center">
            <br><br>
            <a class="btn btn-primary btn-xl" href="{{ path('app_security_registration') }}">Je m'inscris !</a>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="page-section bg-dark text-white">
        <div class="container text-center">
            <div class="row justify-content-center">


                <div class="col-lg-7 text-center">
                    <h2 class="text-white mt-0">Vous êtes recruteur ?</h2>
                    <hr class="divider light my-4">
                    <p class="text-white-50 mb-4">Souscrivez à un compte premium pour avoir directement accès à nos milliers de profils. Vous profiterez de notre recherche avancée intelligente pour trouver votre prochain talent !</p>
                    <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Accès Premium</a>
                </div>
                <div class="col-lg-5 text-center">
                    <img class="img-fluid" src="https://assets-ouch.icons8.com/preview/259/c764f5cb-478f-4a67-b580-e19b5db520fb.png">
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="page-section" id="contact">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="mt-0">Contact</h2>
                    <hr class="divider my-4">
                </div>
            </div>
            <div class="row justify-content-center">

                    <div class="col-lg-3 mr-auto text-center">
                        <a href="https://twitter.com/miakhalifa">
                            <i class="fab fa-twitter fa-3x mb-3 text-muted" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="col-lg-3 mr-auto text-center">
                        <a href="https://www.facebook.com/maxime.aublet?ref=br_rs">
                            <i class="fab fa-facebook fa-3x mb-3 text-muted" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="col-lg-3 mr-auto text-center">
                        <a href="https://www.instagram.com/miakhalifa/?hl=fr">
                            <i class="fab fa-instagram fa-3x mb-3 text-muted" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="col-lg-3 mr-auto text-center">
                        <a href="https://www.pinterest.fr/samsonbaymax/chef-michel-dumas/">
                            <i class="fab fa-pinterest-square fa-3x mb-3 text-muted" aria-hidden="true"></i>
                        </a>
                    </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-12 mr-auto text-center">
                    <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
                    <!-- Make sure to change the email address in anchor text AND the link below! -->
                    <a class="d-block" href="mailto:maxime.aubled@cvbien.com">contact@cvbien.com</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-light py-5">
        <div class="container">
            <div class="small text-center text-muted">Copyright &copy; 2019 - CVBien</div>
        </div>
    </footer>
    </body>
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"
            integrity="sha256-tw5/wId1F+4LyUF2ZJnpRoHNXJ66jrK3IGhfq4LhLjY=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"
            integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o"
            crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet">
    <script src="{{ asset('creative.js') }}"></script>
    {% block footer %}{% endblock %}
{% endblock %}