<div class="modal fade bd-modal-lg" tabindex="-1" role="dialog" aria-labelledby="imageModuleModal" aria-hidden="true" id="imageModuleModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Module Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Image URL</label>
                    <input type="text" class="form-control" id="imageModuleUrl" placeholder="https://static1.purebreak.com/articles/8/16/19/68/@/638878-lorenzo-plus-fort-que-bob-marley-il-la-diapo-2.png">
                </div>
                <div class="form-group">
                    <label>Width</label>
                    <input type="text" class="form-control" id="imageModuleWidth" placeholder="400">
                </div>
                <div class="form-group">
                    <label>Height</label>
                    <input type="text" class="form-control" id="imageModuleHeight" placeholder="400">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="addImageModule($('#imageModuleUrl').val(),$('#imageModuleWidth').val(),$('#imageModuleHeight').val())">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>