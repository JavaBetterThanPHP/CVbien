<div class="modal fade bd-modal-lg" tabindex="-1" role="dialog" aria-labelledby="replitModal" aria-hidden="true" id="replitModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Module Repl.it</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" id="replitTitle" placeholder="Awesome Code">
                </div>
                <div class="form-group">
                    <label>Repl.it URL</label>
                    <input type="text" class="form-control" id="replitUrl" placeholder="https://repl.it/@amasad/PitifulLastingWhoopingcrane">
                </div>
                <div class="form-group">
                    <label>Width</label>
                    <input type="text" class="form-control" id="replitWidth" placeholder="400">
                </div>
                <div class="form-group">
                    <label>Height</label>
                    <input type="text" class="form-control" id="replitHeight" placeholder="400">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="hideReplitCode">
                    <label class="form-check-label" for="hideReplitCode">Hide code</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="addReplitModule($('#replitTitle').val(),$('#replitUrl').val(),$('#replitWidth').val(),$('#replitHeight').val(),$('#hideReplitCode').prop('checked'))">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>