<div class="modal fade bd-modal-lg" tabindex="-1" role="dialog" aria-labelledby="moduleModal" id="moduleModal"
     aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ajouter un Bloc</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body justify-content-around text-center">
                {% if moduleList is defined %}
                    {% for module in moduleList %}
                        <button class="btn btn-link d-inline-flex p-2 " onclick="selectModule('{{ module.name }}')">
                            <div class="card" style="width: 12rem; display: inline-block">
                                <div class="card-body">
                                    <i class="{{ module.faClass }} fa-2x"></i>
                                    <p class="card-text">Module {{ module.name }}</p>
                                </div>
                            </div>
                        </button>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
