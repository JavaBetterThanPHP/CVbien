<div class="modal fade bd-modal-lg" tabindex="-1" role="dialog" aria-labelledby="lienModal" aria-hidden="true" id="lienModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Module Lien</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Titre</label>
                    <input type="text" class="form-control" id="titre" placeholder="Mon espace CVBien">
                </div>
                <div class="form-group">
                    <label>Lien</label>
                    <input type="text" class="form-control" id="lien" placeholder="cvbien.ninja">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="text" class="form-control" id="image" placeholder="http://images5.fanpop.com/image/photos/30900000/scorpion-mortal-kombat-rp-30915624-401-537.jpg">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="addLienModule($('#titre').val(),$('#lien').val(),$('#image').val())">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>